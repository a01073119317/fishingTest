<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fish">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="낚시 앱 연습"
        android:textColor="#00ff88"
        android:textSize="60dp" />


    <Button
        android:id="@+id/B_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:class="a"
        android:text="물떄" />

    <Button
        android:id="@+id/B_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/B_center"
        android:layout_centerInParent="true"
        android:text="위"

        />

    <Button
        android:id="@+id/B_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/B_center"
        android:layout_centerInParent="true"
        android:text="아래" />

    <Button
        android:id="@+id/B_up_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/B_up"
        android:layout_toLeftOf="@+id/B_up"
        android:text="왼쪽위" />

    <Button
        android:id="@+id/B_center_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/B_up_left"
        android:layout_alignLeft="@+id/B_up_left"
        android:text="왼쪽" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/B_center_left"
        android:layout_alignLeft="@id/B_up_left"
        android:text="왼쪽아래" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/B_up"
        android:layout_toRightOf="@+id/B_up"
        android:text="오른쪽위" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/B_center"
        android:layout_toRightOf="@+id/B_center"
        android:text="오른쪽" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/B_bottom"
        android:layout_toRightOf="@id/B_bottom"
        android:text="오른쪽아래" />


</>